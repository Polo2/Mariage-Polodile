<% if policy(@wedding).edit? %>
  <%= render "wedder-tab" %>
<% else %>
  <%=render "guest-tab" %>
<% end %>


<div class="container">

  <div class="row">
    <div class="col-xs-12 col-sm-8">
      <div class="wedding-informations">
        <div class="spouse-photo">
          <% if @wedding.spouse_photo? %>
            <%= cl_image_tag @wedding.spouse_photo.path, width: 130, height: 130, crop: :thumb, gravity: :center %>
          <% end %>
        </div>
        <div class="details">
          <ul>
            <li class="primary"><%= icon('heart') %><%= @wedding.user.first_name %> & <%= @wedding.spouse_first_name %></li>
            <li class="secondary"><%= icon('calendar') %><%= @wedding.date %></li>
            <li class="secondary"><%= icon('map-marker') %><%= @wedding.location %></li>
          </ul>
        </div>
      </div>
      <div class="wedding-description">
        <blockquote>
          <%= @wedding.description %>
        </blockquote>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="info-wedding-location">
       <!--  <%= cl_image_tag @wedding.photo.path, width: 300, height: 400, crop: :thumb, gravity: :center %> -->
        <!-- <div id="map" style="height: 400px;"></div> -->
      </div>
    </div>
  </div>


  <% if policy(@wedding).edit? %>
  <!-- Vue du mariage par les mariés -->
    <div class="4-blocs">
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <div class="wedding-bloc invitations">
            <h3 class="text-center">
            <span class="section-title"><%= t("wedding.blocs.bloc-registry")%></span>
            </h3>

            <ul class="bloc-list">
              <li>Nombre d'invitations : <%= @wedding.registries.count %> </li>
              <li>Nombre de personnes invitées : <%= @wedding.guests.count %> </li>
              <li>Nombre de réponses positives : <%= @wedding.guests.where(presence: true).count%>  </li>
            <ul>
            <div class="button-container">
              <%= link_to t("wedding.guest_list.add"), new_wedding_registry_path(@wedding), class: "button button-show" %>
              <%= link_to t("wedding.guest_list.list"), wedding_registries_path(@wedding), class: "button button-show"%>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-md-6">
          <div class="wedding-bloc tasks">
            <h3 class="text-center">
            <span class="section-title"><%= t("wedding.blocs.bloc-task")%></span>
            </h3>
              <ul class="bloc-list">
                <li>Nombre de services proposés : <%= @wedding.services_count %></li>
                <li>Nombre d'invités inscrits   : <%= @wedding.nb_of_guests_registred_to_a_service_count %></li>
                <li>Nombre de services complets : <%= @wedding.complete_services_count %> </li>
                <li>Nombre d'invités nécessaire : <%= @wedding.guests_needed_for_service_count %>  </li>
              </ul>
              <div class="button-container">
                <%= link_to "Detail services", wedding_path(@wedding), class: "button button-show" %>
                <%= link_to t("task.initialize"), wedding_tasks_upload_path(@wedding), data: { confirm: t("task.initialize-confirmation") } ,class: "button button-show" %>
              </div>
          </div>
        </div>
        <div class="col-xs-12 col-md-6">
          <div class="wedding-bloc accomodations">
            <h3 class="text-center">
              <span class="section-title"><%= t("wedding.blocs.bloc-accomodations")%></span>
            </h3>
              <div id="map" style="height: 250px;"></div>
              <div class="button-container">
                <%= link_to "Detail Logements", wedding_path(@wedding, @registry), class: "button button-show" %>
              </div>
          </div>
        </div>
        <div class="col-xs-12 col-md-6">
          <div class="wedding-bloc trips">
            <h3 class="text-center">
              <span class="section-title"><%= t("wedding.blocs.bloc-trip") %></span>
            </h3>
            <div class="button-container">
              <%= link_to "Detail Trajets", wedding_path(@wedding), class: "button button-show" %>
            </div>
          </div>
        </div>
      </div>
    </div>

  <% else %>
  <!-- Page du mariage vue pour l'invité -->

    <div class="4-blocs">
      <div class="row">
        <div class="col-xs-12 col-md-6">
           <div class="wedding-bloc invitations">
            <h3 class="text-center">
              <span class="section-title"><%= t("wedding.bloc.invitations")%></span>
            </h3>
            <% if @wedding.registries.where(user: current_user).present? & !policy(@wedding).edit? %>
              <% @registry = @wedding.registries.find_by(user: current_user) %>
              <ul class="bloc-list">
                <li><%=  @registry.guests.count %> personnes invitées</li>
                <li>dont <%= @registry.guests.where(child: true).count %> enfant(s) </li>
                <li> <%= @registry.guests.where(presence: true).count %> réponses OUI </li>
              </ul>
              <div class="button-container">
                <%= link_to t("wedding.guest.go_to_registry"), wedding_registry_path(@wedding, @registry), class: "button button-show" %>
              </div>
              <% end %>
          </div>
        </div>
        <div class="col-xs-12 col-md-6">
          <div class="wedding-bloc trips">
            <h3 class="text-center">
              <span class="section-title"><%= t("wedding.bloc.bloc-trips")%></span>
             </h3>
          </div>
        </div>
        <div class="col-xs-12 col-md-6">
          <div class="wedding-bloc accomodations">
            <h3 class="text-center">
              <span class="section-title"><%= t("wedding.bloc.bloc-accomodations")%></span>
            </h3>
            <% if  @registry.accomodation_id? %>
              <ul class="bloc-list">
                <li>Votre logement est bien reservé</li>
              </ul>
              <div class="button-container">
                <%= link_to "Voir détail", wedding_registry_accomodations_path(@wedding, @registry, @registry.accomodation), class: "button button-show" %>
              </div>
            <% else %>
              <ul>
                <li>Pas encore de logement</li>
              </ul>
              <div class="button-container">
                <%= link_to "Choisir votre logement", wedding_registry_accomodations_path(@wedding, @registry), class: "button button-show" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-xs-12 col-md-6">
          <div class="wedding-bloc tasks">
            <h3 class="text-center">
              <span class="section-title"><%= t("wedding.bloc.bloc-trip")%></span>
            </h3>
            <div id="map" style="height: 250px;"></div>
            <div class="button-container">
              <%= link_to "Chercher un covoiturage", wedding_path(@wedding)%>
            </div>
          </div>
        </div>
      </div>
    </div>

  <% end %>


  <% content_for(:after_js) do %>
    <%= javascript_tag do %>
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @markers.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(10);
        }
      });
    <% end %>
  <% end %>

<div class="tasks-bloc">
  <%= render 'tasks/tasks', wedding: @wedding %>
</div>

</div>


<div class= "links">
  <p>
    <% if policy(@wedding).edit? %>
      <%= link_to t("links.edit"), edit_wedding_path(@wedding) %>
    <% end %>
    <% if policy(@wedding).destroy? %>
      <%= link_to t("links.destroy"), @wedding, method: :delete, data: { confirm: t("links.confirmation") } %>
    <% end %>
    <%= link_to t("links.back"), root_path %>
  </p>
</div>

