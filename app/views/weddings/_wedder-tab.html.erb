

    <div class="row">
      <div class="col-xs-12">
        <div class="tabs">
          <div class="tab active" href="<%= wedding_registries_path(@wedding) %>">
            <h3><%= @wedding.guests.count %></h3>
            <p>
              <%= @wedding.guests.count > 1 ? t("wedding.wedder_tab.guests") : t("wedding.wedder_tab.guest") %>
            </p>
          </div>

          <div class="tab">
            <h3><%= @wedding.guests.where(presence: true).count %></h3>
            <p>
              <%= @wedding.guests.where(presence: true).count > 1 ? t("weding.wedder_tab.answers") : t("wedding.wedder_tab.answer") %>
            </p>
          </div>

          <div class="tab date-tab">
            <% if (@wedding.date - Date.current) > 0 %>
              <h3> J - <%=  (@wedding.date - Date.current).to_i %></h3>
            <% end %>
          </div>

          <a class="tab">
            <h3><%= @wedding.tasks.where(statut: false).count %></h3>
            <p>
              <%= @wedding.tasks.count > 1 ? t("wedding.wedder_tab.pending_tasks") : t("wedding.wedder_tab.pending_task") %>
            </p>
          </a>


          <div class="tab">
            <h3><%= @messages_count %></h3>
            <p>
              <%= @messages_count > 1 ? t("wedding.wedder_tab.new_messages") : t("wedding.wedder_tab.new_message") %>
            </p>
          </div>
        </div>
      </div>
    </div>

