<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <div class="profile-description">
      <div class="profile-details">
        <div class="profile-name">
          <h3><%= current_user.first_name %> <%= current_user.last_name %></h3>
        </div>
        <div class="profile-weddings-infos">
          <div class="profile-wedding-org">
            <span><%= current_user.weddings.future.count %></span>
            <p><%= t("profile.wedding_in_preparation")%></p>
          </div>
          <div class="profile-memories">
            <span><%= current_user.registries.exists? ? current_user.registries.count : 0 %></span>
            <p>invitation(s)</p>
          </div>
        </div>
      </div>
      <div class="links">
        <%= link_to t("links.home"), root_path %>
        <%= link_to t("links.edit"), edit_user_registration_path %>
      </div>
    </div>
  </div>
</div>
