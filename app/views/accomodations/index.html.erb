
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3 class="text-center">
        <span class="section-title">Liste des logements</span>
      </h3>

      <div class="accomodation_details">
        <table>
          <tr class="accomodations-titles">
            <th>Nom logement</th>
            <th>Distance</th>
            <th>Adresse</th>
            <th>Détails</th>
            <th>Réservation</th>
          </tr>
        <% @accomodations.each do |acc| %>
          <tr class="accomodations-row">
            <td><%= acc.name %></td>
            <td class="text-center"><%="#{acc.distance} km"%></td>
            <td><%= acc.location%></td>
            <td>
              <% case acc.category %>
                <% when "camping"%>
                  <%= "Sous la tente" %>
                <% when "amis"%>
                  <%= "Chez des amis" %>
                <% when "hotel"%>
                  <%= "Acceuil payant" %>
                <% else %>
              <% end %>
            </td>
            <td>
              <% if policy(@wedding).edit? %>
                <% case acc.category %>
                  <% when "camping" %>
                    <%= link_to "Marquer comme complet ?",  edit_wedding_accomodation_path(@wedding, acc) %>
                  <% when "amis" %>
                    <%= link_to "Marquer comme complet", edit_wedding_accomodation_path(@wedding, acc) %>
                  <% when "hotel" %>
                  <ul class="list-unstyled">
                    <li><%= link_to "Marquer comme complet !", edit_wedding_accomodation_path(@wedding, acc) %></li>
                    <li><%= link_to "voir site web",  acc.contact_website, target: "_blank" %></li>
                <% end%>
              <% else %>
                <% case acc.category %>
                  <% when "camping"%>
                    <%= link_to "Valider sa tente", new_wedding_accomodation_accomodation_request_path(@wedding, acc) %>
                  <% when "amis"%>
                    <%= link_to "Demander à être logé", new_wedding_accomodation_accomodation_request_path(@wedding, acc) %>
                  <% when "hotel"%>
                  <ul class="list-unstyled">
                    <li><%= link_to "Réserver sur le site", acc.contact_website, target: "_blank" %></li>
                    <li><%= link_to "Confirmer la réservation", new_wedding_accomodation_accomodation_request_path(@wedding, acc) %></li>
                  </ul>
                  <% else %>
                <% end %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </table>

      </div>
      <div class="links">
        <a href="http://www.lequipe.fr">Lien l'equipe</a>
        <%= link_to t("links.back"), wedding_path(@wedding) %>
      </div>
    </div>
  </div>
</div>
