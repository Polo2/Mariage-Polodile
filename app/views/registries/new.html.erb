<div class="container">
  <div class="form-center">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
        <% if current_user[:id] == @wedding[:user_id] %>
          <h4> <%= t("wedding.guest_list.new_group") %> </h4>

          <%= render 'form-registry', wedding: @wedding, registry: @egistry %>

        <div class="links">
          <%= link_to t("links.back"), wedding_path(@wedding) %>
        </div>
        <% else %>
          <h1>This is not a wedding that you organize</h1>
          <p>Therefore, you won't create a new registry</p>
        <div class="links">
          <%= link_to "Back to wedding", wedding_path(@wedding)%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

