<div class="container">
  <div class="row">


    <% @vegetables.each do |vg| %>

     <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path vg.photo.path, height: 185, width: 360, crop: :fill %>');">
          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2><%= vg.name %></h2>
          </div>
          <%= avatar_for vg.registry.user , width: 45, height: 45, crop: :thumb, gravity: :face,  class: "card-user"%>
        </div>
      </div>

    <% end %>
  </div>

    <div class=links>
      <%= link_to t("links.back"), wedding_path(@wedding), class: "back-link" %>
    </div>
</div>
