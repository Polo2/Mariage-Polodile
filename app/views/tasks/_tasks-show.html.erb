<div class="container">

  <div class="row">
    <div class="col-xs-2">
      <h2>Categories</h2>
    </div>
    <div class="col-xs-5">
      <h2>To do list</h2>
    </div>
    <div class="col-xs-5">
      <h2>Discussions about</h2>
    </div>
  </div>


  <% @task.categories.each do |category| %>
    <% private_elements = category.elements.where('public = ?', false) %>
    <% public_elements = category.elements.where('public = ?', true) %>
    <div class="row">
      <div class="col-xs-2">
        <h2><%= category.name %></h2>
     </div>

      <div class="col-xs-5">
        <h3>Private</h3>
        <ul>
          <% private_elements.each do |element| %>
            <li><%= element.content %></li>
          <% end %>
        </ul>
        <h3>Public</h3>
        <ul>
          <% public_elements.each do |element| %>
            <li><%= element.content %></li>
          <% end %>
        </ul>
      </div>


      <div class="col-xs-5">
        <p>Gros bloc de discussion</p>
      </div>
    </div>

    <%= link_to "edit this category", edit_wedding_task_category_path(@wedding, @task, category) %>
  <% end %>

</div>

