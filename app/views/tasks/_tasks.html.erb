<div class="container">
  <div class="row">
    <h3 class="text-center">
      <span class="section-title">My tasks</span>
    </h3>

      <% wedding.tasks.each do |task| %>
      <ul class="tasks">
        <div class="col-xs-6 col-md-2 .offset-md-1">
          <%= link_to wedding_task_path(wedding, task) do %>
          <div class="taskimage">
            <%= image_tag "#{task.name.parameterize}.jpg" %>
          </div>
          <li class="task">
            <div class="taskname">
              <%= task.name %>
            </div>
            <div class= statut>
              <% if task.statut %>
                <i class="fa fa-check"></i>
              <% else %>
                <i class="fa fa-hourglass-half"></i>
              <% end %>
            </div>
            <% end %>
          </li>
        </div>
      <% end %>
    </ul>
  </div>

  <div class="row">
    <div class="col-xs-12 text-center">
      <div class="links">
        <%= link_to "New task", new_wedding_task_path(wedding) %>
      </div>
    </div>
  </div>
</div>

